	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug",
			"type": "gdb",
			"request": "launch",
			"debugger_args": [
				"-n"
			],
			"target": "${relativeFileDirname}/bin/${fileBasenameNoExtension}",
			"cwd": "${workspaceFolder}",
			"valuesFormatting": "parseText",
			"preLaunchTask": "make debug"
		}
	]
}
